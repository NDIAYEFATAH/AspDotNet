<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<extensions>
		<add assembly="NLog.Targets.ElasticSearch" />
	</extensions>

	<targets>
		<!-- Fichier local (toujours utile pour debug local) -->
		<target name="file" xsi:type="File" fileName="nlog/${shortdate}.log"
				layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=ToString}" />

		<!-- Elasticsearch -->
		<target name="elastic" xsi:type="ElasticSearch"
				uri="http://elasticsearch:9200"
				index="aspnet-logs-${date:format=yyyy.MM.dd}"
				documentType="logevent"
				includeAllProperties="true"
				excludeProperties="Exception.StackTrace,Exception.Source" />

	</targets>

	<rules>
		<!-- Envoi vers le fichier -->
		<logger name="*" minlevel="Trace" writeTo="file" />
		<!-- Envoi vers Elasticsearch -->
		<logger name="*" minlevel="Info" writeTo="elastic" />
	</rules>

</nlog>
